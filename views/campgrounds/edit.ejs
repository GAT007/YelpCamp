<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit <%=foundCampground.title%>
        </h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=foundCampground._id%>?_method=PUT" method="POST" novalidate
                class="validatedForm" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">New Title : </label><input class="form-control" type="text"
                        name="campground[title]" id="title" value="<%=foundCampground.title%>" required>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location : </label><input class="form-control" type="text"
                        name="campground[location]" id="location" value="<%=foundCampground.location%>" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Add Image</label>
                    <!-- <input class="form-control" type="text" name="campground[image]" id="image" placeholder="Image URL"
                        required> -->
                    <input type="file" name="campground[image]" class="form-control" id="image" placeholder="Image URL"
                        multiple>
                    <!-- <label for="state">State : </label><input type="text" name="state" id="state" placeholder="State"> -->
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description : </label><textarea class="form-control"
                        name="campground[description]" id="description" required>
                        <%=foundCampground.description%>
                    </textarea>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price : </label>
                    <div class="input-group mb-3">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" aria-label="price" name="campground[price]" id="price"
                            value="<%=foundCampground.price%>" required>
                        <span class="input-group-text">.00</span>
                    </div>
                </div>

                <div class="mb-3">
                    <% foundCampground.image.forEach(function(img,i) {%>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="<%=img.filename%>">
                        <div class="form-check-inline">
                            <input type="checkbox" id="images-<%=img.filename%>" name="deleteImages[]"
                                value="<%=img.filename%>">
                            <label class="form-check-label" for="images-<%=img.filename%>">
                                Delete?
                            </label>
                        </div>
                        <%})%>
                </div>


                <div class="mb-3">
                    <button class="btn btn-success">Edit Campground</button>
                </div>

            </form>
            <a href="/campgrounds">All campgrounds</a>
            <a href="/campgrounds/<%=foundCampground._id%>">Back to Details</a>
        </div>

    </div>